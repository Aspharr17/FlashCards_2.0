<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_niveles"
    tools:context=".Playground">

    <TextView
        android:id="@+id/txtWordsP"
        android:layout_width="652dp"
        android:layout_height="300dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="130sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartP"
        android:layout_width="208dp"
        android:layout_height="85dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/startPractice"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtWordsP"
        app:layout_constraintEnd_toStartOf="@+id/txtWordsP"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtWordsP"
        app:layout_constraintTop_toBottomOf="@+id/txtWordsP" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/startPractice"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/txtWordsP"
        app:layout_constraintEnd_toEndOf="@+id/txtWordsP"
        app:layout_constraintStart_toStartOf="@+id/txtWordsP"
        app:layout_constraintTop_toTopOf="@+id/txtWordsP"
        app:srcCompat="@drawable/nextword" />

    <ImageButton
        android:id="@+id/btnBackP"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/BackButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/backbutton" />


</android.support.constraint.ConstraintLayout>