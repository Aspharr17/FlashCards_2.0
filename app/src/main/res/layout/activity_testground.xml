<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_niveles"
    tools:context=".Testground">

    <ImageButton
        android:id="@+id/btnBackTest"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/txtWordsTest"
        android:layout_width="609dp"
        android:layout_height="276dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeMaxTextSize="150sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartT"
        android:layout_width="208dp"
        android:layout_height="85dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/startPractice"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtWordsTest"
        app:layout_constraintEnd_toStartOf="@+id/txtWordsTest"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtWordsTest"
        app:layout_constraintTop_toBottomOf="@+id/txtWordsTest" />

    <ImageButton
        android:id="@+id/btnCorrectT"
        android:layout_width="159dp"
        android:layout_height="149dp"
        android:backgroundTint="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtWordsTest"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="@+id/txtWordsTest"
        app:layout_constraintTop_toTopOf="@+id/txtWordsTest"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/correcto" />

    <ImageButton
        android:id="@+id/btnIncorrectT"
        android:layout_width="159dp"
        android:layout_height="149dp"
        android:backgroundTint="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtWordsTest"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="@+id/txtWordsTest"
        app:layout_constraintTop_toTopOf="@+id/txtWordsTest"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/incorrecto" />

</android.support.constraint.ConstraintLayout>